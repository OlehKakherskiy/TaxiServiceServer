<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="orderService" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="ua.kpi.mobiledev.service.OrderService"/>
    </bean>

    <bean id="userService" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="ua.kpi.mobiledev.service.TransactionalUserService"/>
    </bean>

    <bean id="addressFacade" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="ua.kpi.mobiledev.facade.AddressFacade"/>
    </bean>
</beans>